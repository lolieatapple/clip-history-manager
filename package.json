{
  "name": "clipboard-history-manager",
  "version": "1.0.0",
  "description": "A beautiful and secure clipboard history manager built with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "keywords": ["clipboard", "history", "manager", "electron", "privacy"],
  "author": "Clipboard Manager",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.0.1"
  },
  "build": {
    "appId": "com.clipboardmanager.app",
    "productName": "Clipboard History Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "icon": "icon.png"
  }
}